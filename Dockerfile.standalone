FROM golang:1.24.4-alpine AS builder

WORKDIR /app

# Copy OAuth wrapper standalone version
COPY oauth-wrapper/standalone.go ./
RUN go mod init oauth-wrapper
RUN go build -o oauth-wrapper standalone.go

FROM alpine:latest
RUN apk --no-cache add ca-certificates

WORKDIR /app

# Copy OAuth wrapper binary
COPY --from=builder /app/oauth-wrapper .

# Railway will set PORT
EXPOSE 8080

# Run OAuth wrapper standalone
CMD ["./oauth-wrapper"]